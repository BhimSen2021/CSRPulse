@model CSRPulse.Model.AuditReviewModule
@{
    ViewData["Title"] = "Add New Audit Review Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Financial Audit</a></li>
                    <li class="breadcrumb-item active">Audit Review Module</li>
                </ol>
            </div>
            <h4 class="page-title">Audit Review Module</h4>
        </div>
    </div>
    <div class="col">
        <partial name="_NoteFieldsMark" />
    </div>
</div>



<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="AuditReviewModule" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <div class="mb-3">
                        <label asp-for="Module" class="form-label required"></label>
                        <input type="text" asp-for="Module" class="form-control" maxlength="256" placeholder="Enter Module Name (max 256 characters)" autocomplete="off">
                        <span asp-validation-for="Module" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sequence" class="form-label required"> </label>
                        <input type="text" asp-for="Sequence" onkeypress="return onlyNumber(event)" class="form-control" maxlength="2" placeholder="Enter Sequence (max 2 digits number)" autocomplete="off">
                        <span asp-validation-for="Sequence" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IsActive" class="form-label"></label>
                        <input asp-for="IsActive" type="checkbox" id="@Model.ModuleId" data-bs-toggle="modal" data-bs-target="#info-header-modal" data-switch="success" checked="checked" />
                        <label for="@Model.ModuleId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                        <span asp-validation-for="IsActive" class="invalid"></span>
                    </div>

                    <div class="mb-2 text-end">
                        <a asp-area="" asp-controller="AuditReviewModule" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply m-1"></i> Back to list </a>
                        <button class="btn btn-primary btn-sm" type="submit"><i class="uil-weight me-1"></i> Save </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>
