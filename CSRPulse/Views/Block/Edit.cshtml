@model CSRPulse.Model.Block
@{
    ViewData["Title"] = "Edit Block";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Locations</a></li>
                    <li class="breadcrumb-item active">Block</li>
                </ol>
            </div>
            <h4 class="page-title">Edit Block</h4>
        </div>
    </div>
    <div class="col">
        <div class="alert alert-secondary" role="alert">
            <strong><i class="dripicons-information me-1"></i>Note - </strong> Fields marked with <b>(<span class="text-danger">*</span>)</b> are compulsory fields.
        </div>
    </div>
</div>



<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="Block" asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlockId" />
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <div class="mb-3">
                        <label asp-for="StateId" class="form-label required"></label>
                        <select asp-for="StateId" asp-items="@ViewBag.ddlState" onchange="BindDistrict(this)" aria-required="true" class="form-select">
                            <option disabled="" label="State" selected="" value="">State</option>
                        </select>
                        <span asp-validation-for="StateId" class="invalid"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DistrictId" class="form-label required"></label>
                        <select asp-for="DistrictId" asp-items="@ViewBag.ddlDistrict" aria-required="true" class="form-select">
                            <option disabled="" label="District" selected="" value="">District</option>
                        </select>
                        <span asp-validation-for="DistrictId" class="invalid"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BlockName" class="form-label required"></label>
                        <input type="text" asp-for="BlockName" class="form-control" maxlength="50" placeholder="Enter Block Name (max 50 characters)" autocomplete="off">
                        <span asp-validation-for="BlockName" class="invalid"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="BlockCode" class="form-label required"></label>
                        <input type="text" asp-for="BlockCode" class="form-control" maxlength="5" placeholder="Enter Block Code (5 digits number)" autocomplete="off">
                        <span asp-validation-for="BlockCode" class="invalid"></span>
                    </div>

                    <div class="mb-2 text-end">
                        <a asp-area="" asp-controller="Block" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply m-1"></i> Back to list </a>
                        <button class="btn btn-primary btn-sm" type="submit"><i class="mdi mdi-file-document-edit m-1"></i> Update </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>
@section Scripts{
    <script src="~/scripts/Block.js" asp-append-version="true"></script>
}