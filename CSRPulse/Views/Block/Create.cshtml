@model CSRPulse.Model.Block
@{
    ViewData["Title"] = "Add New Block";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                    <li class="breadcrumb-item active">Add New Block</li>
                </ol>
            </div>
            <h4 class="page-title">Block</h4>
        </div>
    </div>
</div>



<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="Block" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">

                    <div class="mb-3">
                        <label asp-for="StateId" for="MobileNo" class="form-label">State</label>
                        <select asp-for="StateId" asp-items="@ViewBag.ddlState" onchange="BindDistrict(this)" aria-required="true" class="form-select">
                            <option disabled="" label="State" selected="" value="">State</option>
                        </select>
                        <span asp-validation-for="StateId" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DistrictId" for="MobileNo" class="form-label">District</label>
                        <select asp-for="DistrictId" aria-required="true" class="form-select">
                            <option disabled="" label="District" selected="" value="">District</option>
                        </select>
                        <span asp-validation-for="DistrictId" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BlockName" for="MobileNo" class="form-label">Block</label>
                        <input type="text" asp-for="BlockName" class="form-control" maxlength="100" placeholder="Enter Block (max 100 characters)" autocomplete="off">
                        <span asp-validation-for="BlockName" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BlockCode" for="BlockCode" class="form-label">Short Name</label>
                        <input type="text" asp-for="BlockCode" class="form-control" maxlength="2" placeholder="Enter state code (max 2 characters)" autocomplete="off">
                        <span asp-validation-for="BlockCode" class="invalid"></span>
                    </div>
                    <div class="mb-2 text-end">
                        <button class="btn btn-primary rounded-pill" type="submit"><i class="mdi mdi-file-document"></i> Create </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>

<script>
        function BindDistrict(e) {
            if ($("#StateId").val() != "") {
                var StateId = 0;
                StateId = $("#StateId").val();

                $("#DistrictId").html("");
       
                if (StateId > 0) {
                jQuery.post("@Url.Action("BindDistrict", "Block")", {
                    StateId: StateId
                }).done(function (data) {
                    debugger;
                    if (data != "") {
                        $("#DistrictId").html("");
                        $.each(data, function (key, value) {
                            $("#DistrictId").append($("<option></option>").val(value.Value).html(value.Text));
                        });
                    }
                });
            } else {
                    $("#DistrictId").append($("<option></option>").val("").html('District'));
            }
        }
    }
</script>