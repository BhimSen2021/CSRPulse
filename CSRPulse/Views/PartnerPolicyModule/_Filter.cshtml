@model PartnerPolicyModule

<div class="card bg-transparent">
    <div class="card-body">
        <form data-ajax="true" data-ajax-method="GET" data-ajax-update="#div-partnerpolicymodule-list" data-ajax-mode="replace" asp-action="GetPartnerPolicyModuleList" asp-controller="PartnerPolicyModule">
            <div class="row">
                <div class="col-md-2 col-form-label">
                    <i class="mdi mdi-filter"></i> <label>Filter By :</label>
                </div>
                <div class="row">
                    <label asp-for="PolicyId" class="col-md-1 col-form-label">Policy</label>
                    <div class="col-md-3">
                        <select asp-for="PolicyId" asp-items="@ViewBag.ddlPartnerPolicy" aria-required="true" class="form-select">
                            <option label="Select Policy" selected="" value=""></option>
                        </select>
                        <span asp-validation-for="PolicyId" class="invalid"></span>
                    </div>
                    <label asp-for="IsActiveFilter" class="col-md-1 col-form-label"></label>
                    <div class="col-md-3">
                        <select asp-for="IsActiveFilter" aria-required="true" class="form-select">
                            <option label="All" selected="" value=""></option>
                            <option label="Yes" value="true"></option>
                            <option label="No" value="false"></option>
                        </select>
                        <span asp-validation-for="IsActiveFilter" class="invalid"></span>
                    </div>
                    <div class="col-md-4 text-end">
                        <button type="submit" value="Search" data-bs-toggle="tooltip" data-bs-placement="top" title="Click here, to search records" class="btn btn-warning btn-sm rounded-pill text-white">
                            <i class="dripicons-search me-2"></i> Search
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




