@model List<CSRPulse.Model.ProcessDocument>

<div class="card">
    <div class="card-body">
        <table id="basic-datatable" class="table table-hover dt-responsive nowrap w-100">
            <thead class="thead-light">
                <tr>
                    <th width="5%">#</th>
                    <th>Document Name</th>
                    <th>Parent Document</th>
                    <th width="5%">Active</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span>@(Model.ToList().IndexOf(item) +1)</span>
                            </td>

                            <td>
                                <span data-bs-toggle="tooltip" data-bs-placement="top" title="Click here, to edit this record."> @Html.ActionLink(item.DocumentName,"Edit", "ProcessDocument", new { dId = item.DocumentId })</span>                                
                            </td>
                            <td>@item.ParentDocument</td>
                            <td>
                                <div>
                                    <input type="checkbox" id="switch_@item.DocumentId" data-bs-toggle="modal" data-bs-target="#info-header-modal" data-switch="success" onchange="openpopup(this)" @if (item.IsActive == true) { <text> checked="checked" </text> } />
                                    <label for="switch_@item.DocumentId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip()
        })
        Basicdatatable();
    });
</script>