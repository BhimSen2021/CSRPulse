@model Partner
@using CSRPulse.Common
<form data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace">
    <div class="mb-2 text-end">
        <input type="hidden" asp-for="PartnerId" id="ForeignAgencyPId" />
        <button id="addForeignAgency" class="btn btn-danger btn-sm" type="button"><i class="mdi mdi-plus"></i> Add New</button>
    </div>
    <div class="row">
        <div class="mb-3">
            <table class="table table-hover table-sm table-centered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Funding Agency Type</th>
                        <th>Funding Agency Name</th>
                        <th width="5%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.NgofundingPartner != null)
                    {
                        var a = 0;
                        for (int i = 0; i < Model.NgofundingPartner.Count; i++)
                        {
                            if (Model.NgofundingPartner[i].AgencyType == (int)AgencyType.ForeignFundingAgencies)
                            {
                                <tr>
                                    <td>
                                        <span>@(a+1)</span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.NgofundingPartner[i].FundingAgency)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.NgofundingPartner[i].NgofundingPartnerName)
                                    </td>
                                    <td data-bs-toggle="tooltip" data-bs-placement="top" title="Click here to, Delete agency "><a class="confirm-delete text-danger" id="foreignAgency_@Model.NgofundingPartner[i].NgofundingPartnerId " data-bs-toggle="modal" data-bs-target="#info-header-modal" onclick="openpopup(this)"><i class="dripicons-trash me-2"></i></a></td>
                                </tr>
                                a = a + 1;
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

<script type="text/javascript">
    $('#addForeignAgency').click(function () {
        $('#ngo-agency-modal_2').modal('show');
    });

</script>
