@model IEnumerable<PartnerDocument>
@using CSRPulse.Common
<form>
    <div class="row">
        <div class="mb-3">
            <table class="table table-hover table-sm table-centered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Document Type</th>
                        <th>Is Uploaded</th>
                        <th width="5%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><span>@(Model.ToList().IndexOf(item) +1)</span></td>
                                <td>@item.DocumentName</td>
                                <td>@item.IsUploaded</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>


