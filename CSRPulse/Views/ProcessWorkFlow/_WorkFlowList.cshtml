@model IEnumerable<ProcessSetupModel>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <form data-ajax="true" data-ajax-method="PUT" asp-controller="ProcessWorkFlow" asp-action="UpdateWorkFlow">

            <div class="card">
                <div class="card-body">
                    <div class="col-md text-end">
                        <a asp-controller="ProcessWorkFlow" asp-action="UpdateSkillValue" class="btn btn-danger btn-sm btn-rounded mb-3"><i class="mdi mdi-pencil-circle me-1"></i>Update Skill Value</a>
                        <a asp-controller="ProcessWorkFlow" asp-action="Edit" class="btn btn-danger btn-sm btn-rounded mb-3"><i class="mdi mdi-pencil-circle me-1"></i>Edit Process</a>
                    </div>
                    <table id="basic-datatable" class="table table-hover dt-responsive nowrap w-100">
                        <thead class="thead-light">
                            <tr>
                                <th width="5%">#</th>
                                <th>@Html.DisplayNameFor(m => m.Skip)</th>
                                <th>@Html.DisplayNameFor(m => m.PrimaryRole)</th>
                                <th>@Html.DisplayNameFor(m => m.SecondaryRole)</th>
                                <th>@Html.DisplayNameFor(m => m.LevelName)</th>
                                <th>@Html.DisplayNameFor(m => m.Sequence)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                var newModel = Model.ToList();
                                @for (int i = 0; i < newModel.Count; i++)
                                {                                    
                                    <tr>
                                        <td><span>@(i + 1)</span></td>
                                        <td>
                                            <input type="hidden" asp-for="@newModel[i].SetupId" />
                                            <input type="hidden" asp-for="@newModel[i].ProcessId" />

                                            @if (i != 0)
                                            {
                                                <input type="checkbox" asp-for="@newModel[i].Skip" />
                                            }

                                        </td>
                                        <td>@newModel[i].PrimaryRole</td>
                                        <td>@newModel[i].SecondaryRole</td>
                                        <td>@newModel[i].LevelName</td>
                                        <td>@newModel[i].Sequence</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">No Records Found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>

    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Basicdatatable();
    });
</script>