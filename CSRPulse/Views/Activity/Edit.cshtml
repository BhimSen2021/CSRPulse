@model Activity
@{
    ViewData["Title"] = "Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Thematics</a></li>
                    <li class="breadcrumb-item active">Activity</li>
                </ol>
            </div>
            <h4 class="page-title">Edit Activity</h4>
        </div>
    </div>
    <div class="col">
        <partial name="_NoteFieldsMark" />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-controller="Activity" asp-action="Edit">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ActivityId" />
                    <input type="hidden" asp-for="ThemeId" />
                    <div class="row">
                        <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 col-sm-12 col-12">
                            <div class="mb-3">
                                <label asp-for="ThemeId" class="form-label required"></label>
                                <select asp-for="ThemeId" id="ddlThemeId" asp-items="@ViewBag.ddlTheme" aria-required="true" disabled class="form-select">
                                    <option disabled="" label="Select Theme" selected="" value=""></option>
                                </select>
                                <span asp-validation-for="ThemeId" class="invalid"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ActivityName" class="form-label required"></label>
                                <input type="text" asp-for="ActivityName" class="form-control" maxlength="200" placeholder="Enter Activity Name (max 200 characters)" autocomplete="off">
                                <span asp-validation-for="ActivityName" class="invalid"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ActivityCode" class="form-label required"></label>
                                <input type="text" asp-for="ActivityCode" class="form-control" maxlength="3" placeholder="Enter Activity Code (max 3 characters)" autocomplete="off">
                                <span asp-validation-for="ActivityCode" class="invalid"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <div>
                                    <input asp-for="IsActive" type="checkbox" id="@Model.ActivityId" data-bs-toggle="modal" data-bs-target="#info-header-modal" data-switch="success" />
                                    <label for="@Model.ActivityId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                                </div>
                                <span asp-validation-for="IsActive" class="invalid"></span>
                            </div>


                            <div class="mb-2 text-end">
                                <a asp-area="" asp-controller="Activity" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply"></i> Back to list </a>
                                <button class="btn btn-primary btn-sm" type="submit"><i class="uil-weight me-1"></i> Update </button>
                            </div>
                        </div>

                    </div> <!-- end card -->
                </form>
            </div> <!-- end card body-->
        </div>
    </div>
</div>
