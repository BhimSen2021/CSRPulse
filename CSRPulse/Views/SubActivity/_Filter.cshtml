@model SubActivity

<div class="card bg-transparent">
    <div class="card-body">
        <form data-ajax="true" data-ajax-method="GET" data-ajax-update="#div-subactivity-list" data-ajax-mode="replace" asp-action="GetSubActivityList" asp-controller="SubActivity">
            <div class="col-md-2 col-form-label">
                <i class="mdi mdi-filter"></i> <label>Filter By :</label>
            </div>
            <div class="row">
                <label asp-for="ThemeId" class="col-md-1 col-form-label">Theme</label>
                <div class="col-md-3">
                    <select asp-for="ThemeId" asp-items="@ViewBag.ddlTheme" aria-required="true" class="form-select">
                        <option disabled="" label="Select Theme" selected="" value="">Select Theme</option>
                    </select>
                    <span asp-validation-for="ThemeId" class="invalid"></span>
                </div>
                <label asp-for="ActivityId" class="col-md-1 col-form-label">Activity</label>
                <div class="col-md-3">
                    <select asp-for="ActivityId" asp-items="@(new SelectList(string.Empty,"id","value"))" aria-required="true" class="form-select">
                        <option disabled="" label="Select Activity" selected="" value=""></option>
                    </select>
                    <span asp-validation-for="ActivityId" class="invalid"></span>
                </div>
                <label asp-for="IsActive" class="col-md-1 col-form-label"></label>
                <div class="col-md-1 col-form-label">
                    <div>
                        <input asp-for="IsActive" type="checkbox" id="IsActive" data-switch="success" checked />
                        <label for="IsActive" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                    </div>
                </div>
                <div class="col-md-2 text-end">
                    <button type="submit" value="Search" data-bs-toggle="tooltip" data-bs-placement="top" title="Click here, to search records" class="btn btn-warning btn-sm rounded-pill text-white">
                        <i class="dripicons-search me-2"></i> Search
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>




