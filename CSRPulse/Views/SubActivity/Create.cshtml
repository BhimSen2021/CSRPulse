@model CSRPulse.Model.SubActivity
@{
    ViewData["Title"] = "Add New SubActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Thematics</a></li>
                    <li class="breadcrumb-item active">Sub Activity</li>
                </ol>
            </div>
            <h4 class="page-title">Add New Sub Activity</h4>
        </div>
    </div>
    <div class="col">
        <partial name="_NoteFieldsMark" />
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-area="" asp-controller="SubActivity" asp-action="Create">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row"> 
                        <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 col-sm-12 col-12">
                            <div class="mb-3">
                                <label asp-for="ThemeId" class="form-label required"></label>
                                <select asp-for="ThemeId" asp-items="@ViewBag.ddlTheme" aria-required="true" class="form-select">
                                    <option disabled="" label="Select Theme" selected="" value=""></option>
                                </select>
                                <span asp-validation-for="ThemeId" class="invalid"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ActivityId" class="form-label required"></label>
                                <select asp-for="ActivityId" asp-items="@(new SelectList(string.Empty,"id","value"))" aria-required="true" class="form-select">
                                    <option disabled="" label="Select Activity" selected="" value=""></option>
                                </select>
                                <span asp-validation-for="ActivityId" class="invalid"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SubActivityName" class="form-label required"></label>
                                <input type="text" asp-for="SubActivityName" class="form-control" maxlength="200" placeholder="Enter Sub Activity Name (max 200 characters)" autocomplete="off">
                                <span asp-validation-for="SubActivityName" class="invalid"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SubActivityCode" class="form-label"></label>
                                <input type="text" asp-for="SubActivityCode" class="form-control" maxlength="3" placeholder="Enter Sub Activity Code (max 3 characters)" autocomplete="off">
                                <span asp-validation-for="SubActivityCode" class="invalid"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <input asp-for="IsActive" type="checkbox" id="@Model.SubActivityId" data-switch="success" checked="checked" />
                                <label for="@Model.SubActivityId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                                <span asp-validation-for="IsActive" class="invalid"></span>
                            </div>

                            <div class="mb-2 text-end">
                                <a asp-area="" asp-controller="SubActivity" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply m-1"></i> Back to list </a>
                                <button class="btn btn-primary btn-sm" type="submit"><i class="mdi mdi-file-document m-1"></i> Save </button>
                            </div>
                        </div>

                    </div> <!-- end card -->
                </form>
            </div> <!-- end card body-->
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/scripts/SubActivity.js"></script>
}