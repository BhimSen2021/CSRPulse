@model CSRPulse.Model.Village
@using CSRPulse.Common
@{
    ViewData["Title"] = "Add New Village";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                    <li class="breadcrumb-item active">Add New Village</li>
                </ol>
            </div>
            <h4 class="page-title">Village</h4>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="Village" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">

                    <label asp-for="StateId" for="StateId" class="form-label"></label>
                    <select asp-for="StateId" asp-items="@ViewBag.ddlState" aria-required="true" onchange="BindDistrict(this)" class="form-select">
                        <option disabled="" label="State" selected="" value="">State</option>
                    </select>
                    <span asp-validation-for="StateId" class="invalid"></span>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                    <label asp-for="DistrictId" for="DistrictId" class="form-label"></label>
                    <select asp-for="DistrictId" aria-required="true" onchange="BindBlock(this)" class="form-select">
                        <option disabled="" label="District" selected="" value="">District</option>
                    </select>
                    <span asp-validation-for="DistrictId" class="invalid"></span>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                    <label asp-for="BlockId" for="BlockId" class="form-label"></label>
                    <select asp-for="BlockId" aria-required="true" class="form-select">
                        <option disabled="" label="Block" selected="" value="">Block</option>
                    </select>
                    <span asp-validation-for="BlockId" class="invalid"></span>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                    <label asp-for="VillageName" for="VillageName" class="form-label"></label>
                    <input type="text" asp-for="VillageName" class="form-control" maxlength="100" placeholder="Enter Village (max 50 characters)" autocomplete="off">
                    <span asp-validation-for="VillageName" class="invalid"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                    <label asp-for="VillageCode" for="VillageCode" class="form-label"></label>
                    <input type="text" asp-for="VillageCode" class="form-control" maxlength="2" placeholder="Enter village code (max 2 characters)" autocomplete="off">
                    <span asp-validation-for="VillageCode" class="invalid"></span>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 mb-2">
                    <label asp-for="LocationType" for="LocationType" class="form-label"></label>
                    <select asp-for="LocationType" asp-items="@Html.GetEnumSelectList<EnumLocationType>()" aria-required="true" class="form-select">
                        <option disabled="" label="LocationType" selected="" value="">LocationType</option>
                    </select>
                    <span asp-validation-for="VillageId" class="invalid"></span>
                </div>
            </div>
            <div class="mb-2 text-end">
                <button class="btn btn-primary rounded-pill" type="submit"><i class="mdi mdi-file-document"></i> Create </button>
            </div>

        </form>
    </div> <!-- end card body-->
</div>

<script>
        function BindDistrict(e) {
            if ($("#StateId").val() != "") {
                var StateId = 0;
                StateId = $("#StateId").val();     
                $("#DistrictId").html("");
                $("#DistrictId").append($("<option disabled selected label='District'></option>").val("").html("District"));
                $("#BlockId").html("");
                $("#BlockId").append($("<option disabled selected></option>").val("").html("Block"));
                if (StateId > 0) {
                jQuery.post("@Url.Action("BindDistrict", "Village")", {
                    StateId: StateId
                }).done(function (data) {
                    debugger;
                    if (data != "") {                
                        $.each(data, function (key, value) {
                            $("#DistrictId").append($("<option></option>").val(value.value).html(value.text));
                        });
                    }
                });
            } 
        }
    }

            function BindBlock(e) {
                if ($("#StateId").val() != "" && $("#DistrictId").val() != "") {
                var StateId = 0;
                StateId = $("#StateId").val();
                    var DistrictId = 0;
                    DistrictId = $("#DistrictId").val();
                    $("#BlockId").html("");
                    $("#BlockId").append($("<option disabled selected></option>").val("").html("Block"));

                    if (StateId > 0 && DistrictId>0) {
                jQuery.post("@Url.Action("BindBlock", "Village")", {
                    StateId: StateId,
                    DistrictId: DistrictId
                }).done(function (data) {
                    debugger;
                    if (data != "") {                
                        $.each(data, function (key, value) {
                            $("#BlockId").append($("<option></option>").val(value.value).html(value.text));
                        });
                    }
                });
            } 
        }
    }
</script>