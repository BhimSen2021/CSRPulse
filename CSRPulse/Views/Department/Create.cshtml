@model CSRPulse.Model.Department
@{
    ViewData["Title"] = "Add New Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>                   
                    <li class="breadcrumb-item active">Department</li>
                </ol>
            </div>
            <h4 class="page-title">Department</h4>
        </div>
    </div>
    <div class="col">
        <div class="alert alert-secondary" role="alert">
            <strong><i class="dripicons-information me-1"></i>Note - </strong> Fields marked with <b>(<span class="text-danger">*</span>)</b> are compulsory fields.
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="Department" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <div class="mb-3">
                        <label asp-for="DepartmentName" class="form-label required"></label>
                        <input type="text" asp-for="DepartmentName" class="form-control" maxlength="250" placeholder="Enter Department (max 250 characters)" autocomplete="off">
                        <span asp-validation-for="DepartmentName" class="invalid"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IsActive" class="form-label"></label>
                        <input asp-for="IsActive" type="checkbox" id="@Model.DepartmentId" data-bs-toggle="modal" data-bs-target="#info-header-modal" data-switch="success" checked="checked" />
                        <label for="@Model.DepartmentId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                        <span asp-validation-for="IsActive" class="invalid"></span>
                    </div>

                    <div class="mb-2 text-end">
                        <a asp-area="" asp-controller="Department" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply m-1"></i> Back to list </a>
                        <button class="btn btn-primary btn-sm" type="submit"><i class="mdi mdi-file-document m-1"></i> Save </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>
