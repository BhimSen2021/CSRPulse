
@{
    ViewData["Title"] = "District";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                    <li class="breadcrumb-item active">District</li>
                </ol>
            </div>
            <h4 class="page-title">District List</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        
            @{await Html.RenderPartialAsync("_Filter");}
       
        <div id="div-district-list">

        </div>
    </div>
</div>

<div id="info-header-modal" class="modal fade" tabindex="-1" district="dialog" aria-labelledby="info-header-modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-colored-header bg-info">
                <h4 class="modal-title" id="info-header-modalLabel">Confirmation</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div class="modal-body">
                Do you want to perform this action ?.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">No</button>
                <button type="button" onclick="DistrictActiveDeActive(this)" class="btnconfirm btn btn-info" data-bs-dismiss="modal">Yes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@section Scripts{
    <script type="text/javascript">

        function openpopup(cnt) {
            debugger;
            var id = cnt.id.split('_')[1];
            $('.btnconfirm').attr('id', id + '_' + cnt.checked);

        }
        function DistrictActiveDeActive(IsActive) {
            debugger;
            var userId = IsActive.id.split('_')[0];
            var isChecked = IsActive.id.split('_')[1];
            debugger;
            $.ajax({
                type: 'POST',
                dataType: 'JSON',
                url: '/District/DistrictActiveDeActive',
                data: { userId: userId, IsActive: isChecked },
                success: function (responce) {
                    if (responce) {
                        commonMessage('success', 'District status changed successfully.');
                    }

                    else {
                        commonMessage('warning', 'District status changing failed.');
                    }

                },
                error: function (responce) {
                    commonMessage('error', 'District status changing failed.');
                }
            });
        }
    </script>
}