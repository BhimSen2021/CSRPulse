@model CSRPulse.Model.District
@{
    ViewData["Title"] = "Add New District";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Masters</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Locations</a></li>
                    <li class="breadcrumb-item active">District</li>
                </ol>
            </div>
            <h4 class="page-title">District</h4>
        </div>
    </div>
    <div class="col">
        <div class="alert alert-secondary" role="alert">
            <strong>Note - </strong> Fields marked with <b>(<span class="text-danger">*</span>)</b> are compulsory fields.
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" asp-controller="District" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 col-sm-12 col-12">
                    <div class="mb-3">
                        <label asp-for="StateId" class="form-label required"></label>
                        <select asp-for="StateId" asp-items="@ViewBag.ddlState" aria-required="true" class="form-select">
                            <option disabled="" label="Select State" selected="" value=""></option>
                        </select>
                        <span asp-validation-for="StateId" class="invalid"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="DistrictName" class="form-label required"></label>
                        <input type="text" asp-for="DistrictName" class="form-control" maxlength="100" placeholder="Enter District (max 100 characters)" autocomplete="off">
                        <span asp-validation-for="DistrictName" class="invalid"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="DistrictShort" for="UserName" class="form-label"> </label>
                        <input type="text" asp-for="DistrictShort" class="form-control" maxlength="4" placeholder="Enter short name (max 4 characters)" autocomplete="off">
                        <span asp-validation-for="DistrictShort" class="invalid"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DistrictCode" class="form-label required"></label>
                        <input type="text" asp-for="DistrictCode" onkeypress="return onlyNumber(event)" class="form-control" maxlength="3" placeholder="Enter district code (max 3 digits number)" autocomplete="off">
                        <span asp-validation-for="DistrictCode" class="invalid"></span>
                    </div>
                    <div class="mb-2 text-end">
                        <a asp-area="" asp-controller="District" asp-action="Index" class="btn btn-light btn-sm"><i class="dripicons-reply m-1"></i> Back to list </a>
                        <button class="btn btn-primary btn-sm" type="submit"><i class="mdi mdi-file-document m-1"></i> Save </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>
