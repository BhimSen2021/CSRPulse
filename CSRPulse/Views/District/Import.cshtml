
@{
    ViewBag.Title = "Import District";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .modal-backdrop {
        /* bug fix - no overlay */
        display: none;
    }

    .error {
        background-color: #fa2d46 !important;
        color: white !important;
    }
</style>

<div class="row">
   
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="dv-Import-Section">

        <div class="panel panel-default">

            <div class="panel-body" id="dv-import">

                @{await Html.RenderPartialAsync("_ImportFilter");}

                <hr />

                <div id="xss" style="height:auto;">

                </div>

            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

    window.addEventListener("submit", function (e) {
        var form = e.target;
        if (form.getAttribute("enctype") === "multipart/form-data") {
            if (form.dataset.ajax) {
                e.preventDefault();
                e.stopImmediatePropagation();
                var xhr = new XMLHttpRequest();
                xhr.open(form.method, form.action);
                xhr.onreadystatechange = function () {
                    if (xhr.readyState == 4 && xhr.status == 200) {

                        var url = "@Url.Action("_ImportedDataAsGridFormat", "District")";
                        var response = xhr.responseText.substring(1, xhr.responseText.length - 1);
                        //alert(response);
                        if (response == "nofileFound") {
                            $.post(url, {}).done(function (data) {

                                $("#xss").html(data);
                                $('#waitLoading').css('display', 'none');
                                $('.modal-backdrop').hide();
                            });
                        }
                        if (response == "inValidFileFormat") {

                            $.post(url, {}).done(function (data) {

                                $("#xss").html(data);
                                $('#waitLoading').css('display', 'none');
                                $('.modal-backdrop').hide();
                            });
                        }
                        if (response == "success") {
                            $.post(url, {}).done(function (data) {

                                $("#xss").html(data);
                                $('#waitLoading').css('display', 'none');
                                $('.modal-backdrop').hide();
                            });
                        }
                        if (form.dataset.ajaxUpdate) {
                            var updateTarget = document.querySelector(form.dataset.ajaxUpdate);
                            if (updateTarget) {
                                updateTarget.innerHTML = xhr.responseText;
                            }
                        }
                    }
                };
                xhr.send(new FormData(form));
            }
        }
    }, true);
</script>