@model IEnumerable<Auditor>
<div class="card">
    <div class="card-body">
        <div class="text-end">
            <a asp-area="" asp-controller="Auditor" asp-action="Create" class="btn btn-danger btn-sm btn-rounded mb-3"><i class="mdi mdi-plus-circle me-1"></i> Add New Auditor</a>
        </div>
        <table id="basic-datatable" class="table table-centered table-hover w-100 dt-responsive nowrap dataTable no-footer dtr-inline">
            <thead class="thead-light">
                <tr>
                    <th width="5%">#</th>
                    <th>@Html.DisplayNameFor(model => model.AuditOrganization)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Website)</th>
                    <th width="5%">@Html.DisplayNameFor(model => model.IsActive)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var auditor in Model)
                    {
                <tr>
                    <td>
                        <span>@(Model.ToList().IndexOf(auditor) +1)</span>
                    </td>

                    <td><span data-bs-toggle="tooltip" data-bs-placement="top" title="Click here, to edit this auditor.">  @Html.ActionLink(auditor.AuditOrganization, "Edit", "Auditor", new { AuditorId = auditor.AuditorId })</span></td>
                    <td>
                        @Html.DisplayFor(model => auditor.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => auditor.Website)
                    </td>
                    <td>
                        <div>
                            <input type="checkbox" id="Active_@auditor.AuditorId" data-bs-toggle="modal" data-bs-target="#info-header-modal" data-switch="success" onchange="openpopup(this)" @if (auditor.IsActive == true) { <text> checked="checked" </text> } />
                            <label for="Active_@auditor.AuditorId" data-on-label="Yes" data-off-label="No" class="mb-0 d-block"></label>
                        </div>
                    </td>
                </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Basicdatatable();
    });
</script>