@model IEnumerable<ProjectInterventionReport>
@using CSRPulse.Common
<div class="row">
    <div class="mb-3">

        <table class="basic-datatable table table-striped dt-responsive nowrap no-footer dtr-inline dataTable">
            <thead class="thead-light">
                <tr>
                    <th width="5%">#</th>
                    <th>@Html.DisplayNameFor(m => m.ReportName)</th>
                    <th>@Html.DisplayNameFor(m => m.SubmittedOn)</th>
                    <th>@Html.DisplayNameFor(m => m.Status)</th>
                    <th>@Html.DisplayName("Reporting Period")</th>
                    <th>@Html.DisplayNameFor(m => m.DueDate)</th>
                    <th>@Html.DisplayNameFor(m => m.ProjectYear)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var report in Model.OrderBy(r => r.ReportNo))
                    {
                        <tr>
                            <td>@report.ReportNo</td>
                            <td>@report.ReportName</td>
                            <td>@report.SubmittedOn</td>
                            <td>@ExtensionMethods.ReportStatus(report.Status ?? 1, report.StartDate)</td>
                            <td><span class="badge badge-info-lighten">@report.StartDate.ToShortDateString() to @report.EndDate.ToShortDateString() </span> </td>
                            <td>@report.DueDate.ToShortDateString()</td>
                            <td>@report.ProjectYear</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        Basicdatatable();
    });
</script>