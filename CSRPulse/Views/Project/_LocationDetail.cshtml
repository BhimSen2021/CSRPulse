@model IEnumerable<ProjectLocationDetail>
<div class="row">
    <div class="mb-3">
        <table id="tblLocation" class="basic-datatable table table-striped dt-responsive nowrap w-100">
            <thead class="thead-light">
                <tr>
                    <th width="5%">#</th>
                    <th>@Html.DisplayNameFor(m => m.StateName)</th>
                    <th>@Html.DisplayNameFor(m => m.DistrictName)</th>
                    <th>@Html.DisplayNameFor(m => m.BlockName)</th>
                    <th>@Html.DisplayNameFor(m => m.VillageName)</th>                  
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model.OrderBy(r => r.StateId).ThenBy(r => r.DistrictId))
                    {
                        <tr>
                            <td><span>@(Model.ToList().IndexOf(item) +1)</span></td>
                            <td>@item.StateName</td>
                            <td>@item.DistrictName</td>
                            <td>@item.BlockName</td>
                            <td>@item.VillageName</td>                            
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
