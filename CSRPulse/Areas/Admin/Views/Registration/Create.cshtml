@model CSRPulse.Model.SignUp
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Management</a></li>
                    <li class="breadcrumb-item active">Registration</li>
                </ol>
            </div>
            <h4 class="page-title">Create an Account</h4>
        </div>
    </div>
</div>



<div class="card">
    <div class="card-body">
        <form method="post" asp-area="Admin" asp-controller="Registration" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="invalid"></div>
            <div class="row">
                <h4 class="text-muted text-start mb-3">Please fill in this form to create an account.</h4>
                <div class="col-xl-4 text-center">
                    <img id="myImg" src="~/assets/images/users/sample-profile.png" asp-append-version="true" alt="Profile" class="rounded-circle avatar-xl img-thumbnail" title="Click to select image" />
                    <input id="UserImg" title="Upload image" type="file" name="UserImg" accept=".png,.jpg,.jpeg"
                           style="display: none" />
                    <h2></h2>
                    <button id="btnCP" type="button" class="btn btn-outline-success rounded-pill btn-sm mb-3"><i class="uil-camera-change"></i> Change picture</button>

                    <div class="form-group mb-3 mt-3 text-start">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "form-label", @for = "FullName" })
                        <input type="text" asp-for="FullName" class="form-control" placeholder="Enter full name" autocomplete="off">
                        <span asp-validation-for="FullName" class="invalid"></span>
                    </div>
                    <div class="form-group text-start mb-3">
                        @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "form-label", @for = "EmailId" })
                        <input type="text" asp-for="EmailId" class="form-control" required placeholder="Enter email id" autocomplete="off">
                        <span asp-validation-for="EmailId" class="invalid"></span>
                    </div>

                </div> <!-- end card-body -->
                <div class="col-1">
                </div>
                <div class="col-xl-5">
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "form-label", @for = "MobileNo" })
                        <input type="text" asp-for="MobileNo" class="form-control" maxlength="10" pattern="[0-9]{10}" placeholder="Enter mobile number" autocomplete="off">
                        <span asp-validation-for="MobileNo" class="invalid"></span>
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label", @for = "UserName" })
                        <input type="text" asp-for="UserName" class="form-control" placeholder="Enter user name" autocomplete="off">
                        <span asp-validation-for="UserName" class="invalid"></span>
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label", @for = "Password" })
                        <div class="input-group input-group-merge">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" autocomplete="off">
                            <div class="input-group-text" data-password="false">
                                <span class="password-eye"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="invalid"></span>
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-label", @for = "ConfirmPassword" })
                        <div class="input-group input-group-merge">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter Confirm password" autocomplete="off">
                            <div class="input-group-text" data-password="false">
                                <span class="password-eye"></span>
                            </div>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="invalid"></span>
                    </div>
                    <div class="mb-2 text-end">
                        <button class="btn btn-primary rounded-pill" type="submit"><i class="mdi mdi-account-circle"></i> Submit </button>
                    </div>
                </div>

            </div> <!-- end card -->
        </form>
    </div> <!-- end card body-->
</div>

@section Scripts {
    <script type="text/javascript">
        $("#btnCP").click(function () {
            $("#UserImg").trigger('click');
        });

        $(function () {
            $(":file").change(function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = imageIsLoaded;
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });

        function imageIsLoaded(e) {
            $('#myImg').attr('src', e.target.result);
        };
    </script>
}
