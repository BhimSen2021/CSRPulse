@model UserRoleModel
<form data-ajax="true" data-ajax-method="POST" method="Post" asp-action="AssignRole" asp-controller="Registration" asp-area="Admin" data-ajax-success="onAssignRole">
    <div id="assign-role-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-info">
                    <h4 class="modal-title">Assign Role</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="@Model.UserId" type="hidden" />
                    @if (Model != null)
                    {
                        if (Model.userRoles != null)
                        {
                            for (int i = 0; i < Model.userRoles.Count; i++)
                            {
                                <div class="form-check form-checkbox-success mb-2">
                                    <input class="form-check-input" asp-for="@Model.userRoles[i].AssigneRole" type="checkbox" />
                                    <label class="form-check-label" asp-for="@Model.userRoles[i].RoleId">@Model.userRoles[i].RoleName</label>
                                </div>
                                <input asp-for="@Model.userRoles[i].RoleId" type="hidden" />
                                <input asp-for="@Model.userRoles[i].RoleName" type="hidden" />
                            }
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info btn-sm" value="Save">Assign Role</button>
                </div>
            </div>
        </div>
    </div>
</form>