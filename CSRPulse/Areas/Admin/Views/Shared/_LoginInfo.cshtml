@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using CSRPulse.Model
@{
    var uData = HttpContextAccessor.HttpContext.Session.GetComplexData<UserDetail>("User");
}

@if (uData != null)
{
    <li class="dropdown">
        <a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-2x"></i>&nbsp; @(uData.FullName)</a>
        <ul class="dropdown-menu settings-menu dropdown-menu-right">
            <li><a class="dropdown-item" href="#"><i class="fa fa-cog fa-lg"></i> Settings</a></li>
            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Profile"><i class="fa fa-user fa-lg"></i> Profile</a></li>
            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="ChangePassword"><i class="fa fa-key fa-lg"></i>Password</a></li>
            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out fa-lg"></i> Logout</a></li>
        </ul>
    </li>
}



