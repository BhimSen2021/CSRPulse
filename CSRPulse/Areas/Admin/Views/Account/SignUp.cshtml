@model CSRPulse.Model.SignUp

@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin SignUp | CSRPulse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully customize CSR Product." name="description" />
    <meta content="Microware Computing & Consulting Pvt. Ltd" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" asp-append-version="true">

    <!-- App css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app-creative.min.css" rel="stylesheet" type="text/css" id="light-style" />
    <link href="~/assets/css/app-creative-dark.min.css" rel="stylesheet" type="text/css" id="dark-style" />

</head>
<body class="authentication-bg pb-0" data-layout-config='{"darkMode":false}'>
    <div class="auth-fluid">
        <!--Auth fluid left content -->
        <div class="auth-fluid-form-box">
            <div class="align-items-center d-flex h-100">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="auth-brand text-center text-lg-start">
                        <a href="#" class="logo-dark">
                            <span><img src="~/assets/images/logo-dark.png" alt="" height="18" asp-append-version="true"></span>
                        </a>
                        <a href="#" class="logo-light">
                            <span><img src="~/assets/images/logo-light.png" alt="" height="18" asp-append-version="true"></span>
                        </a>
                    </div>
                    <h4 class="mt-4">Sign Up</h4>
                    <p class="text-muted mb-4">Don't have an account? Create your account, it takes less than a minute.</p>

                    <form method="post" asp-area="Admin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "form-label", @for = "FullName" })
                            <input type="text" asp-for="FullName" class="form-control" placeholder="Enter full name" required="" autocomplete="off">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "form-label", @for = "EmailId" })
                            <input type="text" asp-for="EmailId" class="form-control" placeholder="Enter email id" required="" autocomplete="off">
                            <span asp-validation-for="EmailId   " class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "form-label", @for = "UserName" })
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter user name" required="" autocomplete="off">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label", @for = "Password" })
                            <div class="input-group input-group-merge">
                                <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" required="" autocomplete="off">
                                <div class="input-group-text" data-password="false">
                                    <span class="password-eye"></span>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="checkbox-signup">
                                <label class="form-check-label" for="checkbox-signup">I accept <a href="javascript: void(0);" class="text-muted">Terms and Conditions</a></label>
                            </div>
                        </div>

                        <div class="mb-0 d-grid text-center">
                            <button class="btn btn-primary" type="submit"><i class="mdi mdi-account-circle"></i> Sign Up </button>
                        </div>

                    </form>
                    <footer class="footer footer-alt">
                        <p class="text-muted">Already have account? <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="text-muted ms-1"><b>Log In</b></a></p>
                    </footer>
                </div>
            </div>
        </div>
        <!-- end auth-fluid-form-box-->
        <!-- Auth fluid right content -->
        <div class="auth-fluid-right text-center">
            <div class="auth-user-testimonial">
                <h2 class="mb-3">Sell, market, and service with the world's #1 <br>CRM.</h2>
                <p class="lead">
                    <i class="mdi mdi-format-quote-open"></i>  Welcome to the Salesforce Customer Success Platform. Our new Lightning Platform gives you the fastest, most complete way
                    to put your customers at the center of everything you do. <i class="mdi mdi-format-quote-close"></i>
                </p>
                <p>
                    - CSRPulse Administrator Sign Up
                </p>
            </div> <!-- end auth-user-testimonial-->
        </div>
        <!-- end Auth fluid right content -->
    </div>

    <!-- bundle -->
    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
</body>
</html>

