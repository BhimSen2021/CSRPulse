@model IEnumerable<Plan>
@{
    ViewData["Title"] = "Plan";
}

    <div class="row pt-2 pb-2">
        <div class="col-4">
            <h4>Plan List</h4>
        </div>
        <div class="col-8">
            <a asp-action="Create" asp-area="Admin" asp-controller="Plan" class="btn btn-success rounded-pill float-right">Create New Plan</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead class="thead-light">
                    <tr>
                        <th>Plan Name</th>
                        <th>Plan Detail</th>
                        <th>Is Plan Deleted?</th>
                        <th>Plan Created</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var plan in Model)
                        {
                            <tr>
                                <td>@plan.PlanName</td>
                                <td>@plan.PlanDetail</td>
                                <td>@plan.IsDeleted</td>
                                <td>@plan.CreatedOn.ToShortDateString()</td>
                            </tr>

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">No Records Found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
