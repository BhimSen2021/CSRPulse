@model IEnumerable<Plan>
@{
    ViewData["Title"] = "Plan";

}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CSRPulse</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Manage</a></li>
                    <li class="breadcrumb-item active">Plans</li>
                </ol>
            </div>
            <h4 class="page-title">Plans</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2 clearfix">
                    <div class="col text-end">
                        <a asp-action="Create" asp-area="Admin" asp-controller="Plan" class="btn btn-danger rounded-pill btn-sm mb-2"><i class="mdi mdi-plus-circle me-2"></i> Create New Plan</a>
                    </div>
                </div>

                <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>Plan Name</th>
                            <th>Plan Detail</th>
                            <th>Is Plan Deleted?</th>
                            <th>Plan Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var plan in Model)
                            {
                                <tr>
                                    <td>@plan.PlanName</td>
                                    <td>@plan.PlanDetail</td>
                                    <td>@plan.IsDeleted</td>
                                    <td>@plan.CreatedOn.ToShortDateString()</td>
                                </tr>

                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">No Records Found</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>
<!-- end row -->
