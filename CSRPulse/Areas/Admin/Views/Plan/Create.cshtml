@model Plan
@{
    ViewData["Title"] = "Plans";
}

<div class="row">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>Plan</h4>
                <p>Create New Plan.</p>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PlanName" class="control-label required"></label>
                        <input asp-for="PlanName" class="form-control" />
                        <span asp-validation-for="PlanName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlanDetail" class="control-label required"></label>
                        <textarea asp-for="PlanDetail" maxlength="500" class="form-control"></textarea>
                        <span asp-validation-for="PlanDetail" class="text-danger"></span>
                    </div>
                    <div class="form-group pull-right">
                        <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                        <a class="btn btn-dark" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


